FROM node:12
COPY nodeapp /nodeapp
WORKDIR /nodeapp

ARG RDS_HOSTNAME="${env.RDS_HOSTNAME}"
ARG RDS_USERNAME="${env,RDS_USERNAME}"
ARG RDS_PASSWORD="${env.RDS_PASSWORD}"
ARG RDS_PORT="${env.RDS_PORT}"
ARG REDIS_HOSTNAME="${env.REDIS_HOSTNAME}"
ARG REDIS_PORT="${env.REDIS_PORT}"

RUN npm install
CMD ["node", "/nodeapp/app.js"]